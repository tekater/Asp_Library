@page
@model Library.Pages.AddBookModel
@{
    ViewData["Title"] = "AddBook";
}
<h3 class="display-4">Add Books</h3>
<div class="list-group-item d-flex justify-content-between">
    <form asp-page-handler="AddBook" method="post">
        <div class="form-group">
            <label>Name:</label> <br>
            <input class="text" name="name" />
        </div>
        <div class="form-group">
            <label>Author:</label> <br>
            <input <input class="text" name="author" />
        </div>
        <div class="form-group">
            <label>Style:</label> <br>
            <input class="text" name="style" />
        </div>
        <div class="form-group">
            <label>Year:</label> <br>
            <input class="text" name="year" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
